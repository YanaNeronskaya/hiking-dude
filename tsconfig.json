{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "experimentalDecorators": true
    },
    "include": [
        "/*.ts",
        "src/**/*.ts", "src/bundle.tsx", "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}